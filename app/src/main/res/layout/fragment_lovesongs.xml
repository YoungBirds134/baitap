<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_playing_all_lovetsong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Phát Tất Cả"
            android:textColor="@color/roseEnd"
            android:textSize="15dp"
            app:icon="@drawable/ic_graphic_eq_black_24dp"
            app:iconTint="#B52323"
            tools:text="Phát Tất Cả" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_thuvien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_top_header"
        tools:listitem="@layout/item_feature_song"
        tools:orientation="vertical"
        tools:layoutManager="LinearLayoutManager"
        android:overScrollMode="never"
        />
</LinearLayout>