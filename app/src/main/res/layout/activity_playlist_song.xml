<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_playing_all_playlistsong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Phát Tất Cả"
            android:textColor="@color/roseEnd"
            android:textSize="15dp"
            app:icon="@drawable/ic_graphic_eq_black_24dp"
            app:iconTint="#B52323"
            tools:text="Phát Tất Cả" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_song_playlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="visible" />

<!--    <ListView-->
<!--        android:id="@+id/lv_playlist"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent" />-->

</LinearLayout>